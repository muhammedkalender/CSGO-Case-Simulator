    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/twPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prize : 0"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/twNextPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Prize : 0"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdx1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:button="@mipmap/abc_btn_check_to_on_mtrl_015"
            android:checked="true"
            android:text="1X"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/rdx3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:button="@mipmap/abc_btn_check_to_on_mtrl_000"
            android:text="3X"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/rdx5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:button="@mipmap/abc_btn_check_to_on_mtrl_000"
            android:text="5x"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <RadioButton
            android:id="@+id/rdx24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:button="@mipmap/abc_btn_check_to_on_mtrl_000"
            android:text="24X"
            android:textColor="@color/textcolor"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diceInfo"
            android:textColor="@color/textcolor" />

        <EditText
            android:id="@+id/tpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="6"
            android:imeOptions="actionDone"
            android:text="0"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:text="@string/play_game"
        android:textColor="@color/textcolor" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        ads:adSize="BANNER"
        ads:adUnitId="@string/AD_BANNER" />
    </LinearLayout>

