                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine8"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine9"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine10"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine11"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine12"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine13"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine14"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/minebutton" />

            <ImageView
                android:id="@+id/mine15"
                android:layout_width="32dp"
