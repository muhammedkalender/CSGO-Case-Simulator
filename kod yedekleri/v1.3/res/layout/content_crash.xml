<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/a"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.TombulsCaseSimulator.Crash"
    tools:showIn="@layout/app_bar_crash">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="8"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textColor="@color/textcolor" />

    </LinearLayout>

    <TextView
        android:id="@+id/oTxtCrush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:elevation="3dp"
        android:gravity="center"
        android:text="1.0"
        android:textColor="@color/textcolor"
        android:textSize="56sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:elevation="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diceInfo"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/oTxtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/textcolor" />
    </LinearLayout>

    <Button
        android:id="@+id/oButtonPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@color/button"
        android:elevation="1dp"
        android:text="@string/play"
        android:textColor="@color/textcolor" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adsBannerCrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        ads:adSize="BANNER"
        ads:adUnitId="@string/AD_BANNER" />

</LinearLayout>
